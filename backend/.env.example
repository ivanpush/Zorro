# ZORRO Backend Configuration
# Copy this to .env and fill in your values

# ===========================================
# API Keys (required for real agent runs)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-xxx
PERPLEXITY_API_KEY=pplx-xxx

# ===========================================
# App Settings
# ===========================================
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# Agent Toggles - set to false to skip agent
# Useful for testing one agent at a time
# ===========================================
ENABLE_BRIEFING=true
ENABLE_CLARITY=true
ENABLE_RIGOR=true
ENABLE_DOMAIN=true
ENABLE_ADVERSARY=true

# ===========================================
# Example: Test only Clarity agent
# ===========================================
# ENABLE_BRIEFING=true
# ENABLE_CLARITY=true
# ENABLE_RIGOR=false
# ENABLE_DOMAIN=false
# ENABLE_ADVERSARY=false
